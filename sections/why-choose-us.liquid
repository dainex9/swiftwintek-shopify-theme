<style>
  /* Optional section padding (keep if you used this ID) */
  #shopify-section-template--25149437313362__why_choose_us_zramL7 {
    padding: 6rem;
  }

  /* Scope variables to the modal wrapper so they don't bleed into other sections */
  .modal-variables {
    --sw-highlight-main: blue;
    --sw-highlight: #0073ff;
    --sw-highlight-2: rgb(255, 70, 14);
    --sw-text: #2b3041;
    --sw-bg: #ffffff;
    --sw-card: #fcfcfc;
    --sw-border: #e6e9f5;
  }

  .whyus-trigger-wrapper {
    display: flex;
    justify-content: center;
  }

  /* Trigger button */
  .whyus-trigger {
    display: inline-block;
    font-family: "M PLUS 1", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    font-weight: 700;
    font-size: 1.7rem;
    line-height: 1;
    color: #fff;
    background: var(--sw-highlight-main);
    border: none;
    padding: .9rem 1.75rem;
    border-radius: 6px;
    cursor: pointer;
  }
  .whyus-trigger:hover { filter: brightness(1.1); }

  /* Modal shell */
  .whyus-modal {
    position: fixed; inset: 0;
    display: flex; align-items: center; justify-content: center;
    z-index: 9999;
    opacity: 0; pointer-events: none;
    transition: opacity .25s ease;
  }
  .whyus-modal.is-open { opacity: 1; pointer-events: auto; }

  .whyus-backdrop {
    position: absolute; inset: 0;
    background: rgba(13, 18, 33, .56);
  }

  .whyus-dialog {
    position: relative;
    background: var(--sw-bg);
    width: min(980px, 92vw);
    border-radius: 22px;
    box-shadow: 0 20px 60px rgba(20, 28, 54, .25);
    padding: clamp(1.2rem, 2.5vw, 2rem);
    transform: translateY(12px) scale(.98);
    transition: transform .28s ease;
    border: 1px solid var(--sw-border);
  }
  .whyus-modal.is-open .whyus-dialog { transform: translateY(0) scale(1); }

  .whyus-close {
    position: absolute; top: 12px; right: 12px;
    width: 40px; height: 40px; /* slightly larger tap area */
    border-radius: 10px;
    display: grid; place-items: center;
    border: 1px solid var(--sw-border);
    background: #fff; color: var(--sw-text);
    opacity: .9; cursor: pointer;
    transition: background-color .18s ease, border-color .18s ease, color .18s ease, transform .1s ease;
  }
  .whyus-close:hover {
    background: #eef5ff;
    color: var(--sw-highlight);
    border-color: #d8e7ff;
  }
  .whyus-close:focus-visible {
    outline: 2px solid rgba(0,115,255,.55);
    outline-offset: 2px;
    transform: translateY(-1px);
  }
  @media (max-width: 420px) {
    .whyus-close { width: 44px; height: 44px; }
  }

  /* Header */
  .whyus-header { text-align: center; margin: 8px auto 18px; max-width: 720px; }

  .whyus-kicker {
    font-family: "M PLUS 1", system-ui, Roboto, Arial, sans-serif;
    font-weight: 700; letter-spacing: .08em; text-transform: uppercase;
    font-size: .82rem; color: var(--sw-highlight);
    margin: 0 0 .9rem;
  }

  .whyus-title {
    font-family: "Contrail One", "Montserrat", system-ui, Arial, sans-serif;
    font-weight: 700; color: var(--sw-text);
    font-size: clamp(3rem, 5.5vw, 4.4rem); /* bigger headline */
    line-height: 1.05; margin: .05rem 0 .75rem;
    letter-spacing: .2px;
  }
  .whyus-title span {
    color: var(--sw-highlight);
    text-shadow: 0 2px 0 rgba(0,0,0,.02);
  }

  .whyus-sub {
    font-family: "M PLUS 1", system-ui, Roboto, Arial, sans-serif;
    font-weight: 300; color: #3d4560;
    font-size: 1rem; margin: 0 auto;
  }

  /* Grid */
  .whyus-grid {
    margin: 22px 0 8px;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 14px;
  }
  @media (max-width: 1080px) { .whyus-grid { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 640px)  { .whyus-grid { grid-template-columns: 1fr; } }
  .whyus-card {
    background: linear-gradient(180deg, #ffffff, #fbfdff);
    border: 1px solid rgba(0,0,0,.09);
    border-radius: 16px;
    padding: 16px 14px;
    min-height: 140px;
    box-shadow: 0 10px 22px rgba(0,24,64,.06);
    transition: transform .2s ease, box-shadow .2s ease;
  }
  .whyus-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 14px 30px rgba(0,24,64,.09);
  }

  .whyus-icon {
    width: 42px; height: 42px; border-radius: 12px;
    display: grid; place-items: center;
    color: var(--sw-highlight); background: #eef5ff;
    margin-bottom: 10px;
  }
  .whyus-icon--special svg {
    stroke: #00aee0;              /* your brand blue */
    stroke-width: 2;
    fill: rgba(0, 174, 224, 0.08); /* subtle soft blue background inside shield */
    border-radius: 6px;            /* smooth out edges if fill extends */
    transition: all 0.25s ease;    /* smooth hover animation */
  }
  /* Optional hover effect */
  .whyus-grid article:nth-child(4):hover .whyus-icon--special svg {
    fill: rgba(0, 174, 224, 0.16);
    transform: scale(1.05);
  }
  .whyus-card-title {
    margin: 0 0 6px;
    font-family: "Montserrat", system-ui, Arial, sans-serif;
    font-weight: 700; color: var(--sw-text); font-size: 1.02rem;
  }
  .whyus-card-text {
    margin: 0; font-size: .95rem; line-height: 1.35;
    font-family: "M PLUS 1", system-ui, Arial, sans-serif;
    font-weight: 300; color: #4a5063;
  }

  /* Footer strip */
  .whyus-strip {
    display: flex; flex-wrap: wrap; gap: 12px;
    margin: 20px 0 4px; padding-top: 14px;
    border-top: 1px dashed var(--sw-border);
    justify-content: center;
  }
  .whyus-pill {
    font-family: "M PLUS 1", system-ui, Arial, sans-serif;
    font-weight: 700; font-size: .84rem; color: var(--sw-text);
    background: linear-gradient(180deg, #f4f8ff, #eaf2ff);
    padding: .45rem .7rem; border-radius: 999px;
    border: 1px solid #dfe8fb;
    box-shadow: inset 0 1px 0 #fff;
  }

  /* Slight lift of dialog on tall screens */
  @media (min-height: 700px) {
    #why-choose-us-modal .whyus-dialog { margin-top: 5vh; }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .whyus-modal,
    .whyus-dialog,
    .whyus-card,
    .whyus-close {
      transition: none !important;
    }
  }

  /* Small-screen padding tweak for comfort */
  @media (max-width: 480px) {
    .whyus-dialog { padding: 1rem; }
  }
</style>

