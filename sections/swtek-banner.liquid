{% schema %}
{
  "name": "Swtek Promo Banner",
  "tag": "section",
  "class": "swtek-banner-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover the Power of Swtek Gear™ and Essentials™"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Call to Action Text",
      "default": "Explore premium tech setups, office gear, and performance accessories."
    },
    {
  "type": "text",
  "id": "link",
  "label": "Link URL",
  "default": "/collections/swtek-gear-and-essentials"
}
,
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Swtek Promo Banner"
    }
  ]
}
{% endschema %}

<section style="background-color: #f5f5f5; padding: 2rem 1rem; text-align: center; margin-top: 2rem;">
  <div style="max-width: 1200px; margin: 0 auto;">
    {% if section.settings.heading != blank %}
      <h2 style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subtext != blank %}
      <p style="font-size: 1.125rem; color: #555; margin-bottom: 2rem;">
        {{ section.settings.subtext }}
      </p>
    {% endif %}

    {% if section.settings.banner_image != blank and section.settings.link != blank %}
      <a
        href="{{ section.settings.link }}"
        title="{{ section.settings.heading }}"
      >
        <img
          src="{{ section.settings.banner_image | img_url: 'master' }}"
          alt="{{ section.settings.heading }}"
          style="width: 100%; max-width: 100%; height: auto; border-radius: 12px; box-shadow: 0 4px 16px rgba(0,0,0,0.1); transition: transform 0.3s ease;"
          loading="lazy"
          onmouseover="this.style.transform='scale(1.01)'"
          onmouseout="this.style.transform='scale(1)'"
        >
      </a>
    {% endif %}
  </div>
</section>
